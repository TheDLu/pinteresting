<div id="carousel_pins" class="carousel slide jumbotron center carousel_container" data-ride="carousel">
	<ol class="carousel-indicators">
		<li data-target="#carousel_pins" data-slide-to="0" class="active"></li>
    <li data-target="#carousel_pins" data-slide-to="1"></li>
    <li data-target="#carousel_pins" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <img src="http://www.bodybossfitness.com/assets/hero-basketball.png" alt="..." style="width: auto;max-height: 100%">
      <div class="carousel-caption">
        <h1 style="text-shadow:0px 0px 12px #000;">Welcome to my app</h1>
					<p>
						<%= link_to "Log in", new_user_session_path, class: "btn btn-default btn-lg" %>
						<%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-lg" %>
					</p>
      </div>
    </div>
    <div class="item">
      <img src="http://www.bodybossfitness.com/assets/hero-football.png" alt="..." style="width: auto;max-height: 100%">
      <div class="carousel-caption">
        <h1 style="text-shadow:0px 0px 12px #000;">Welcome to my app</h1>
					<p>
						<%= link_to "Log in", new_user_session_path, class: "btn btn-default btn-lg" %>
						<%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-lg" %>
					</p>
      </div>
    </div>
  </div>  

	<!-- Controls -->
  <a class="left carousel-control" href="#carousel_pins" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel_pins" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>

</div>